<span class="error_message"><%= flash[:warning] %></span>
<%= form_for @job do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, @categories, :id, :name %>
  <%= f.label :company_id %>
  <%= f.collection_select :company_id, @companies, :id, :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Send", id: 'submit' %>
<% end %>
