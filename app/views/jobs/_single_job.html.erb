<div class="job">
  <h2><%= job.title %></h2>
  <% if job.expired? %>
    <p class="text-left"><strong>Job Expired</strong></p>
  <% end %>
  <% if user_signed_in? %>
    <p><%= link_to "Edit", edit_job_path(job), class: 'btn btn-primary' %></p>
  <% end %>
  <p class="text-left">Company: <%= link_to job.company.name, job.company %></p>
  <p class="text-left">Category: <%= link_to job.category.name, job.category %></p>
  <p class="text-left">Location: <%= job.location %></p>
  <p class="text-left"><%= job.description %></p>
</div>
