<span class="error_message"><%= flash[:warning] %></span>
<div class="row">
  <aside class="col-sm-4">
    <h2>Side Menu</h2>
    <h3>Categories</h3>
    <%= render partial: "side_menu", collection: @categories, as: :item %>
    <h3>Companies</h3>
    <%= render partial: "side_menu", collection: @companies, as: :item %>
    <h3>Contract Type</h3>
    <ul class="nav nav-pills nav-stacked stack-drops">
      <% @contracts.each do |contract| %>
        <li class="nav-item-1">
          <%= link_to contract, contracts_path(contract) %>
        </li>
      <% end %>
    </ul>
  </aside>
  <section class="col-sm-8">
    <h1>Recent Jobs</h1>
    <% if !@jobs.empty? %>
        <%= render @jobs %>
    <% else %>
        <%= controller_empty('jobs') %>
    <% end %>
  </section>
</div>
